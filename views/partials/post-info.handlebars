<article class="post">
    <div class="container row card">
        <div class="card-body">
            <h2 class="card-title"><a href="/post/{{id}}">{{title}}</a></h2>
            <hr class="my-3" />
            <p class="card-text">{{post_text}}</p>
            
            <div class="meta">
            By {{user.username}} on {{format_date created_at}} <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
            </div>
        </div>
    </div>
       
</article>