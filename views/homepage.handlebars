<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="/post/{{post.id}}">{{post.title}}</a>
        <span>({{post.post_text}})</span>
      </div>
      <div class="meta">
        By {{post.user.username}} on {{post.created_at}}
        |
        <p>{{post.comments.length}} comment(s)</p>
      </div>
    </article>
  </li>
  {{/each}}
</ol>